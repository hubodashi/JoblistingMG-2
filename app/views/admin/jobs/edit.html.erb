<div class="panel panel-default">
  <div class="panel-heading"><h3>Edit a job</h3></div>
  <div class="panel-body">
    <%= simple_form_for [:admin, @job ] do |f| %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :wage_lower_bound, :label => "薪资下限" %>
    <%= f.input :wage_upper_bound, :label => "薪资上限" %>
    <%= f.input :contact_email %>
    <%= f.input :city, :label => "城市" %>
    <%= f.input :company, :label => "公司" %>
    <%= f.input :category, :label => "类别" %>
    <%= f.input :is_hidden %>
    <%= f.submit "Submit", class:"btn btn-danger" %>
    <% end %>
  </div>
</div>
