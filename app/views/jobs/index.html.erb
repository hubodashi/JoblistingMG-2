<div class="panel panel-default">
  <div class="panel-heading">
    <h3>
      职位列表
      <div class="pull-right">
        <%= link_to("Add a job", new_job_path, :class => "btn btn-success" ) %>
      </div>
      <div class="dropdown clearfix pull-right">
          <button class="btn btn-info dropdown-toggle" type="button" id="dropdownMenuDivider" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
            城市
              <span class="caret"></span>
          </button>
          <ul class="dropdown-menu" aria-labelledby="dropdownMenuDivider">
              <li>
              <%= link_to "北京", jobs_path(:c => "北京" ) %>
              </li>
              <li>
              <%= link_to "上海", jobs_path(:c => "上海" ) %>
              </li>
              <li>
              <%= link_to "广州", jobs_path(:c => "广州" ) %>
              </li>
              <li>
              <%= link_to "深圳", jobs_path(:c => "深圳" ) %>
              </li>
              <li>
              <%= link_to "杭州", jobs_path(:c => "杭州" ) %>
              </li>
              <li>
              <a href="/jobs">所有城市</a>
              </li>
          </ul>
      </div>

      <div class="dropdown clearfix pull-right">
          <button class="btn btn-info dropdown-toggle" type="button" id="dropdownMenuDivider" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
            类别
              <span class="caret"></span>
          </button>
          <ul class="dropdown-menu" aria-labelledby="dropdownMenuDivider">
              <li>
              <%= link_to "技术", jobs_path(:d => "技术" ) %>
              </li>
              <li>
              <%= link_to "产品", jobs_path(:d => "产品" ) %>
              </li>
              <li>
              <%= link_to "设计", jobs_path(:d => "设计" ) %>
              </li>
              <li>
              <%= link_to "运营", jobs_path(:d => "运营" ) %>
              </li>
              <li>
              <%= link_to "市场", jobs_path(:d => "市场" ) %>
              </li>
              <li>
              <a href="/jobs">所有类别</a>
              </li>
          </ul>
      </div>

      <div class="dropdown clearfix pull-right">
        <button class="btn btn-info dropdown-toggle" type="button" id="dropdownMenuDivider" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
          排序
          <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" aria-labelledby="dropdownMenuDivider">
          <li>
            <%= link_to("按照薪资下限排序", jobs_path(:c => @city, :d => @category, :e => @city, :order => "by_lower_bound"))%>
          </li>
          <li>
            <%= link_to("按照薪资上限排序", jobs_path(:c => @city, :d => @category, :e => @city, :order => "by_upper_bound"))%>
          </li>
          <li>
            <%= link_to("按照发表时间排序", jobs_path(:c => @city, :d => @category, :e => @city))%>
          </li>
        </ul>
      </div>
    </h3>
  </div>
  <div class="panel-body">
    <table class="table table-boldered">
      <thead>
       <tr>
        <td>职缺</td>
        <td>薪资下限</td>
        <td>薪资上限</td>
        <td>城市</td>
        <td>公司</td>
        <td>类别</td>
        <td>联系邮箱</td>
        <td>刊登时间</td>
       </tr>
      </thead>
      <tbody>
        <% @jobs.each do |job| %>
        <tr>
         <td>
          <%= link_to(job.title, job_path(job))%>
         </td>
         <td>
          <%= job.wage_lower_bound %>
         </td>
         <td>
          <%= job.wage_upper_bound %>
         </td>
         <td>
          <%= job.city %>
         </td>
         <td>
          <%= job.company %>
         </td>
         <td>
          <%= job.category %>
         </td>
         <td>
          <%= job.contact_email %>
         </td>
         <td>
          <%= job.created_at %>
         </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <div class="text-center">
     <%= will_paginate @jobs %>
    </div>
    </div>
</div>
